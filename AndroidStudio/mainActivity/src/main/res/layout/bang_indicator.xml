<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tt="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/tt_vlight_grey"
    android:paddingLeft="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_vertical_margin"
    android:layout_height="0dp"
    android:layout_weight="1">

    <com.triggertrap.view.ArcProgress
        android:id="@+id/bangVolumeDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="45dp"
        tt:circleColor="#ffdfdfdf"
        tt:clockwise="true"
        tt:startAngle="30"
        tt:endAngle="300"
        tt:progressColor="@color/tt_red"
        tt:progressWidth="12dp"
        tt:rotation="180" />

    <TextView
        android:id="@+id/bangText"
        style="@style/TTBangTitleText"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:text="@string/bang" />

    <com.triggertrap.widget.SeekArc
        android:id="@+id/bangThreshold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="85dp"
        tt:arcColor="#ffdfdfdf"
        tt:arcRadius="00dp"
        tt:arcWidth="3dp"
        tt:max="100"
        tt:progressColor="@color/tt_red"
        tt:rotation="180"
        tt:startAngle="30"
        tt:sweepAngle="300"
        tt:touchInside="true" />

</FrameLayout>