<?xml version="1.0" encoding="utf-8"?>
<com.triggertrap.view.TTLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tt="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tt_vlight_grey"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/timeLapseInputView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6">

        <TextView
            android:id="@+id/timeLapseText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="48dp"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:text="@string/time_lapse"
            android:textColor="@color/tt_dark_grey"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold" />

        <FrameLayout
            android:id="@+id/cd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <include
                android:id="@+id/intervalTime"
                layout="@layout/time_picker" />

            <ImageView
                android:id="@+id/errorIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"

                android:padding="10dp"
                android:layout_alignTop="@+id/intervalTime"
                android:layout_gravity="right|bottom"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:layout_toRightOf="@+id/intervalTime"
                android:gravity="center"
                android:src="@drawable/icon_notification"
                android:visibility="visible" />
        </FrameLayout>

        <include
            android:id="@+id/circularTimer"
            layout="@layout/circle_timer"
            android:visibility="gone" />

        <TextView
            android:id="@+id/timeLapseCount"
            style="@style/CountDownText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="28dp"
            android:text="0" />
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/tt_dark_grey" />

    <FrameLayout
        android:id="@+id/buttonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:background="@color/tt_light_grey">

        <com.triggertrap.widget.OngoingButton
            android:id="@+id/timelapseButton"
            android:layout_width="match_parent"
            android:layout_height="223dp"
            android:layout_gravity="center"
            android:padding="6dp"
            tt:toggle="true" />
    </FrameLayout>

</com.triggertrap.view.TTLinearLayout>